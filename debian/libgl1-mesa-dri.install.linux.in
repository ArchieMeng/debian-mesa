build/dri/${DEB_HOST_MULTIARCH}/r300_dri.so usr/lib/${DEB_HOST_MULTIARCH}/dri-alternates
build/dri/${DEB_HOST_MULTIARCH}/r600_dri.so usr/lib/${DEB_HOST_MULTIARCH}/dri-alternates

