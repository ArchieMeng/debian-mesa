+static int
+dri2_image_get_buffers(__DRIdrawable *driDrawable,
+                       unsigned int format,
+                       uint32_t *stamp,
+                       void *loaderPrivate,
+                       uint32_t buffer_mask,
+                       struct __DRIimageList *buffers)
+{
+   struct dri2_egl_surface *dri2_surf = loaderPrivate;
+   struct dri2_egl_display *dri2_dpy =
+      dri2_egl_display(dri2_surf->base.Resource.Display);
+   struct gbm_dri_surface *surf = dri2_surf->gbm_surf;
+   struct gbm_dri_bo *bo = NULL;
+
+   if (buffer_mask & __DRI_IMAGE_BUFFER_BACK) {
+      if (!dri2_surf->dri_buffers[__DRI_BUFFER_BACK_LEFT])
+         return 0;
+
+      if (dri2_surf->dri_buffers[__DRI_BUFFER_BACK_LEFT]->name == 0) {
+         struct gbm_import_fd_data data;
+
+         data.fd = dri2_surf->dri_buffers[__DRI_BUFFER_BACK_LEFT]->fd;
+         data.width = dri2_surf->base.Width;
+         data.height = dri2_surf->base.Height;
+         data.format = GBM_FORMAT_ARGB8888;
+         data.stride = dri2_surf->dri_buffers[__DRI_BUFFER_BACK_LEFT]->pitch;
+
+         bo = (struct gbm_dri_bo *)gbm_bo_import(&dri2_dpy->gbm_dri->base.base, GBM_BO_IMPORT_FD, &data, GBM_BO_USE_RENDERING);
+      }
+   }
+
+   if (bo) {
+      buffers->back = bo->image;
+      buffers->image_mask = __DRI_IMAGE_BUFFER_BACK;
+      return 1;
+   }
+
+   return 0;
+}
